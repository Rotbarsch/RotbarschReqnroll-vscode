{
  "name": "rotbarsch-reqnroll-vscode",
  "displayName": "Rotbarsch.Reqnroll",
  "description": "Reqnroll support for VS Code",
  "version": "0.0.7",
  "publisher": "Rotbarsch",
  "license": "MIT",
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/Rotbarsch/RotbarschReqnroll-vscode"
  },
  "engines": {
    "vscode": "^1.85.0"
  },
  "os": ["win32"],
  "activationEvents": [
    "onLanguage:reqnroll-feature",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "reqnroll-feature",
        "aliases": ["Reqnroll Feature", "feature"],
        "extensions": [".feature"]
      }
    ],
    "grammars": [
      {
        "language": "reqnroll-feature",
        "scopeName": "source.reqnroll",
        "path": "./syntaxes/reqnroll.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Reqnroll",
      "properties": {
        "rotbarsch.reqnroll.test.parallelExecutionLimit": {
          "type": "number",
          "default": 5,
          "minimum": 1,
          "description": "Maximum number of tests that can run in parallel. Default is 5."
        }
      }
    },
    "commands": [
      {
        "command": "rotbarsch.reqnroll.forceRebuildProject",
        "title": "Reqnroll: Rebuild project",
        "category": "Reqnroll"
      },
      {
        "command": "rotbarsch.reqnroll.forceRebuildProjectFull",
        "title":"Reqnroll: Rebuild project (full)",
        "category": "Reqnroll"
      },
      {
        "command": "rotbarsch.reqnroll.rerunTestDiscovery",
        "title": "Reqnroll: Re-run test discovery",
        "category": "Reqnroll"
      },
      {
        "command": "rotbarsch.reqnroll.refreshBindings",
        "title": "Reqnroll: Refresh bindings",
        "category": "Reqnroll"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "rotbarsch.reqnroll.forceRebuildProject",
          "when": "resourceExtname == .feature",
          "group": "navigation@2"
        },
        {
          "command": "rotbarsch.reqnroll.forceRebuildProjectFull",
          "when": "resourceExtname == .feature",
          "group": "navigation@2"
        },
        {
          "command": "rotbarsch.reqnroll.rerunTestDiscovery",
          "when": "resourceExtname == .feature",
          "group": "navigation@2"
        },
        {
          "command": "rotbarsch.reqnroll.refreshBindings",
          "when": "resourceExtname == .feature",
          "group": "navigation@2"
        }
      ],
      "explorer/context": [
        {
          "command": "rotbarsch.reqnroll.forceRebuildProject",
          "when": "resourceExtname == .feature || resourceExtname == .feature.cs || resourceExtname == .csproj",
          "group": "navigation@2"
        },
        {
          "command": "rotbarsch.reqnroll.forceRebuildProjectFull",
          "when": "resourceExtname == .feature || resourceExtname == .feature.cs || resourceExtname == .csproj",
          "group": "navigation@2"
        },
        {
          "command": "rotbarsch.reqnroll.rerunTestDiscovery",
          "when": "resourceExtname == .feature || resourceExtname == .feature.cs || resourceExtname == .csproj",
          "group": "navigation@3"
        }
      ]
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "typescript": "^5.3.0",
    "@types/node": "^20.0.0",
    "@types/vscode": "^1.85.0"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
