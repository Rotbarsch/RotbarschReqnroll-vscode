{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run VS Code Extension",
      "type": "extensionHost",
      "request": "launch",
      "runtimeExecutable": "${execPath}",
      "args": ["--extensionDevelopmentPath=${workspaceFolder}/src/client"],
      "preLaunchTask": "publish-reqnroll-lsp-debug",
      "outFiles": ["${workspaceFolder}/src/client/out/**/*.js"]
    },
    {
      "name": "Attach to Reqnroll LSP",
      "type": "coreclr",
      "request": "attach",
      "processName": "Reqnroll.LanguageServer.exe"
    }
  ]
}