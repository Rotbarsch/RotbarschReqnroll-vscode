{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "compile-client",
      "type": "npm",
      "script": "compile",
      "path": "src/client/",
      "problemMatcher": "$tsc",
      "presentation": {
        "reveal": "silent",
        "panel": "shared"
      }
    },
    {
      "label": "publish-reqnroll-lsp-debug",
      "type": "process",
      "command": "dotnet",
      "args": [
        "publish",
        "src/server/Reqnroll.LanguageServer/Reqnroll.LanguageServer.csproj",
        "-c",
        "Debug",
        "-p:SelfContained=false",
        "-p:PublishSingleFile=true",
        "-o",
        "./src/client/artifacts/lsp"
      ],
      "dependsOn": ["compile-client"],
      "problemMatcher": "$msCompile",
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      }
    }
  ]
}